<div class="panel panel-default">
  <div class="panel-heading">
    Your Followers
  </div>
    
  <div class="panel-body">
    <% @users.each do |user| %>
      <div class="row">
      <%= gravatar_for @user %>
      <%= user.name %>
      <td><%= link_to 'show', user %></td>
      </div>
    <% end %>
  </div>
</div>