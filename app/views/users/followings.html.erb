
<div class="panel panel-default">
  <div class="panel-heading">
    Your Followings
  </div>
    
  <div class="panel-body">
    <% @users.each do |user| %>
      <div class="row">
        
      <%= gravatar_for user %>
      <td><%= user.name %></td>
      <td><%= link_to 'show', user %></td>
      </div>
    <% end %>
  </div>
</div>
